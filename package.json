{
  "name": "fun-7-segment",
  "version": "1.0.0",
  "description": "A modern 7-segment display library with multi-color segments and full character mapping",
  "main": "dist/fun-7-segment.min.js",
  "module": "src/SegmentDisplay.js",
  "style": "dist/fun-7-segment.min.css",
  "types": "dist/SegmentDisplay.d.ts",
  "files": [
    "dist/",
    "src/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "npm run build:js && npm run build:css",
    "build:js": "terser src/SegmentDisplay.js -o dist/fun-7-segment.min.js --compress --mangle --comments false",
    "build:css": "cleancss -o dist/fun-7-segment.min.css src/segment-display.css",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "7-segment",
    "segment-display",
    "led-display",
    "digital-display",
    "character-display",
    "scrolling-text",
    "retro-display",
    "seven-segment",
    "display",
    "led",
    "marquee"
  ],
  "author": "Drestanto Muhammad Dyasputro <dyas@live.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/drestanto/seven-segment.git"
  },
  "bugs": {
    "url": "https://github.com/drestanto/seven-segment/issues"
  },
  "homepage": "https://github.com/drestanto/seven-segment#readme",
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "terser": "^5.19.0"
  }
}
